<%- include header %>

<div class="text-center page-title">新用户注册</div>
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <form method="post">
                <div class="alert alert-warning">
                    <a href="#" class=" close"  data-dismiss="alert">
                        &times;
                    </a>
                    <%= message %>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="username"maxlength="20" placeholder="用户名(字母、数字、下划线的组合，长度3-20个字符)"onkeyup="value=value.replace(/[^\w\.\/]/ig,'')">

                </div>
                <div class="form-group">
                    <input id="password" type="password" class="form-control" name="password" placeholder="密码(必须同时包含数字、小写字母、大写字母)">
                    <script>
                        function s(){
                            var str=document.getElementById("password").value
                            if(!(/[a-z]/.test(str)&&/[A-Z]/.test(str)&&/\d/.test(str)))
                            //alert(!/[^a-z0-9]/i.test(str) && /\d/.test(str) && /[a-z]/i.test(str));
                            alert('密码必须包含大小写字母和数字！');
                        }
                    </script>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="passwordRepeat" placeholder="确认密码" onkeyup="s()">
                </div>
                <button type="submit" class="btn btn-default center-block">注册</button>
            </form>
        </div>
    </div>
</div>

<%- include footer %>